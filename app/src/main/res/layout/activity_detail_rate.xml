<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateActivity">

    <ScrollView
        android:id="@+id/scroll_DetailRate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroud_fill"
        android:elevation="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_backDetailRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back_third_blue" />

                <TextView
                    android:id="@+id/tv_titleDetailRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="92dp"
                    android:text="Chi tiết đánh giá"
                    android:textColor="@color/second_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_avatarDetailRate"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/avatar_profile" />

            <TextView
                android:id="@+id/tv_namememberDetailRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hoàng Vũ Trường Giang"
                android:textColor="@color/third_blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_titlemarkDetailRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="Điểm"
                    android:textColor="@color/third_blue"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/third_blue" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thái độ và tác phong"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/tv_mark1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/second_blue"
                    android:layout_marginStart="28dp" />

                <RatingBar
                    android:id="@+id/ratingDetailRate_1"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="5"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỹ năng chuyên môn"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/tv_mark2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/second_blue"
                    android:layout_marginStart="28dp" />

                <RatingBar
                    android:id="@+id/ratingDetailRate_2"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="3.5"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỷ luật và chuyên cần"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/tv_mark3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/second_blue"
                    android:layout_marginStart="28dp" />

                <RatingBar
                    android:id="@+id/ratingDetailRate_3"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="4"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tinh thần cộng tác"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/tv_mark4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/second_blue"
                    android:layout_marginStart="44dp" />

                <RatingBar
                    android:id="@+id/ratingDetailRate_4"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="3.5"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="0.1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chất lượng công việc"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/tv_mark5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/second_blue"
                    android:layout_marginStart="30dp" />

                <RatingBar
                    android:id="@+id/ratingDetailRate_5"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="3.5"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="0.1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_titlecommentDetailRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="Nhận xét"
                    android:textColor="@color/third_blue"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/third_blue" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_commentDetailRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="32dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>