<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="38dp"
    android:layout_marginEnd="34dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    android:elevation="15dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cr_avatarRate"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/avatar_profile"/>

        <TextView
            android:id="@+id/tv_namememberRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàng Vũ Trường Giang"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cr_avatarRate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/tv_emailmemberRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="khiemld.0204@gmail.com"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_namememberRate"
            app:layout_constraintStart_toEndOf="@+id/cr_avatarRate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/tv_doRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textSize="12sp"
            android:textColor="@color/orange"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintHorizontal_bias="0.95"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>