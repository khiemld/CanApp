<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInformation">

    <TextView
        android:id="@+id/tv_noti_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="Tên không được để trống"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_username_edit" />

    <TextView
        android:id="@+id/tv_noti_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="Địa chỉ không được để trống"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_address_edit" />

    <TextView
        android:id="@+id/tv_noti_major_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="Môn học không được để trống"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_major_edit" />

    <TextView
        android:id="@+id/tv_noti_phone_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="Số điện thoại không được để trống"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_phone_edit" />

    <EditText
        android:id="@+id/edt_username_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/main_blue"
        android:drawableStart="@drawable/user_icon_2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="textPersonName"
        android:text="Hoàng Vũ Trường Giang"
        android:textColor="@color/main_blue"
        android:textColorHint="#A5A4AD"
        android:hint="Họ và tên"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <EditText
        android:id="@+id/edt_email_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/main_blue"
        android:drawableStart="@drawable/email_2"
        android:drawablePadding="10dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="end"
        android:inputType="textWebEmailAddress"
        android:text="gianghvt.work@gmail.com"
        android:textColor="@color/main_blue"
        android:textColorHint="#A5A4AD"
        android:textSize="12sp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_username_edit" />

    <EditText
        android:id="@+id/edt_address_edit"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/main_blue"
        android:drawableStart="@drawable/address2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="textPostalAddress"
        android:text="Số 40, Chương Dương, Thủ Đức"
        android:textColor="@color/main_blue"
        android:textColorHint="#A5A4AD"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_edit" />

    <EditText
        android:id="@+id/edt_major_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/main_blue"
        android:drawableStart="@drawable/major2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="textPersonName"
        android:text="Tiên nữ Công nghệ"
        android:textColor="@color/main_blue"
        android:textColorHint="#A5A4AD"
        android:hint="Địa chỉ"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_address_edit" />

    <EditText
        android:id="@+id/edt_phone_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/main_blue"
        android:drawableStart="@drawable/phone2"
        android:drawablePadding="10dp"
        android:focusable="false"
        android:ems="10"
        android:gravity="end"
        android:inputType="phone"
        android:text="0397384473"
        android:textColor="@color/main_blue"
        android:textColorHint="#A5A4AD"
        android:hint="Số điện thoại"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_major_edit" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_register" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="114dp"
            android:layout_height="114dp"
            app:cardCornerRadius="150dp"
            >

            <ImageView
                android:id="@+id/img_avatar_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/logo2" />

            <ImageView
                android:id="@+id/img_upload"
                android:padding="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center|right"
                android:background="@drawable/background_update" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center|right"
                app:srcCompat="@drawable/camera" />

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="133dp"
        android:text="Thông tin"
        android:textColor="@color/main_blue"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_update"
        android:layout_width="137dp"

        android:layout_height="38dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_register"
        app:layout_constraintStart_toEndOf="@+id/constrain_huy"
        app:layout_constraintTop_toBottomOf="@id/tv_noti_phone_edit">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_huy"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"

        android:background="@drawable/background_btnsignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_noti_phone_edit">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="@color/orange"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>