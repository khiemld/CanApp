<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:id="@+id/registerlayout"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="63dp"
        android:text="CAN"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Project is not a big deal"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/img_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_intro"
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:background="@drawable/backgroud_fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/vector_register"
            app:layout_constraintEnd_toStartOf="@+id/tv_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="16dp"
            android:text="Đăng ký tài khoản"
            android:textColor="@color/main_blue"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="6dp"
            android:text="Tạo tài khoản để bắt đầu sử dụng CAN nha!"
            android:textColor="@color/main_blue"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_password" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_intro">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/user_icon"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Họ và tên"
                    android:inputType="textPersonName"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_pass_again"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/mssv"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="MSSV"
                    android:inputType="textPersonName"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_password" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_pass_again" />

                <EditText
                    android:id="@+id/edt_birthday"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/birthday"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Ngày sinh"
                    android:inputType="date"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_email" />

                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/address"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Địa chỉ"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_birthday" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Số điện thoại"
                    android:inputType="phone"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_address" />

                <EditText
                    android:id="@+id/edt_major"
                    android:layout_width="300dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/main_blue"
                    android:drawableStart="@drawable/major"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Ngành học"
                    android:inputType="textPersonName"
                    android:textColor="@color/main_blue"
                    android:textColorHint="#A5A4AD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="253dp"
                    android:layout_marginTop="28dp"
                    android:text="Tiếp theo >"
                    android:textColor="@color/third_blue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_major" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
