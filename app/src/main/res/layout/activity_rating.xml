<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateActivity">

    <ScrollView
        android:id="@+id/scroll_addRating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroud_fill"
        android:elevation="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/img_backRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back_third_blue"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_titleDetailRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Chi tiết đánh giá"
                    android:textColor="@color/second_blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_saveRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu"
                    android:textSize="16sp"
                    android:textColor="@color/orange"
                    android:padding="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_avatarRating"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/avatar_profile" />

            <TextView
                android:id="@+id/tv_namememberRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hoàng Vũ Trường Giang"
                android:textColor="@color/third_blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thái độ và tác phong"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <RatingBar
                    android:id="@+id/ratingRating1"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:isIndicator="false"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="0"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỹ năng chuyên môn"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <RatingBar
                    android:id="@+id/ratingRating2"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:isIndicator="false"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="0"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỷ luật và chuyên cần"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <RatingBar
                    android:id="@+id/ratingRating3"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:isIndicator="false"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="0"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tinh thần cộng tác"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />


                <RatingBar
                    android:id="@+id/ratingRating4"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:isIndicator="false"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="0"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chất lượng công việc"
                    android:textSize="14sp"
                    android:textColor="@color/hint"
                    android:layout_marginStart="30dp" />

                <RatingBar
                    android:id="@+id/ratingRating5"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:isIndicator="false"
                    android:progressTint="#FFAA4C"
                    android:progressBackgroundTint="@color/hint"
                    android:rating="0"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="1" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/hint"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận xét"
                android:textSize="16sp"
                android:textColor="@color/hint"
                android:layout_marginTop="42dp"
                android:layout_marginStart="28dp"/>
            <EditText
                android:id="@+id/edt_commentRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập đánh giá"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:background="@drawable/background_comment"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>